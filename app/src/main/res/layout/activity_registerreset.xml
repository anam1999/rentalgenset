<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterReset"
    android:background="@drawable/bgs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ngoder"
                android:layout_width="250dp"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/logoss"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER REGISTER"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Nama Lengkap"
                android:inputType="text"
                android:textSize="17dp"
                android:textStyle="italic"
                android:background="@drawable/design"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/namalengkap"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Telepon"
                android:inputType="number"
                android:textSize="17dp"
                android:textStyle="italic"
                android:background="@drawable/design"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/telepon"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="17dp"
                android:textStyle="italic"
                android:background="@drawable/design"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/usernamekedua"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="17dp"
                android:textStyle="italic"
                android:background="@drawable/design"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/passwordkedua"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="REGISTER"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/registerkedua"
                android:background="@drawable/design2"
                android:layout_marginBottom="50dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="LOG IN"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/design2"
                android:textSize="15dp"
                android:id="@+id/loginkedua"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
